@model PassingScoreViewModel
@{
    ViewData["Title"] = "Create";
}

<main class="vlt-main">

    <section>
        <div class="container">
            <h3 class="text-center" style="color:#000;">
                Добавление результата поступления на программу @Model.Name
            </h3>
            <hr />
            <div>
                <a class="text-info" asp-controller="Home" asp-action="Menu">Меню</a>/
                <a class="text-primary" asp-action="Index" asp-controller="University">Образовательные организации</a> /
                <a class="text-info" asp-action="Index" asp-controller="UniversityProgram" asp-route-id="@Model.Id">Программы обучения</a>/
                <a class="text-info" asp-action="Index" asp-controller="PassingScore" asp-route-id="@Model.Score.ProgramEducationalOrganizationId">Информация о поступлении</a>/
                <a href="#">Добавление нового результата</a>
            </div>
            <hr />
            <form asp-controller="PassingScore" asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Score.ProgramEducationalOrganizationId" type="hidden" />

                <div class="form-group">
                    <label asp-for="Score.Score">Средний балл</label>
                    <input asp-for="Score.Score" class="form-control" type="number" />
                    <span asp-validation-for="Score.Score" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Score.Year">Год поступления</label>
                    <input asp-for="Score.Year" class="form-control" type="number" min="2010" max="@DateTime.Now.AddYears(-1).Year"/>
                    <span asp-validation-for="Score.Year" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Score.IsBudget">Бюджет</label>
                    <input asp-for="Score.IsBudget" class="form-control" type="checkbox" checked/>
                    <span asp-validation-for="Score.IsBudget" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Создать</button>
                <button class="btn btn-dark" asp-controller="PassingScore" asp-action="Index" asp-route-id="@Model.Score.ProgramEducationalOrganizationId" class="btn btn-primary">Назад</button>
            </form>
        </div>
    </section>
</main>

