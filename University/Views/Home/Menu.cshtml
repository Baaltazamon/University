
@{
    ViewData["Title"] = "Menu";
}

<main class="vlt-main">
	<!--Page Title-->
	<section class="jarallax">
		<img class="jarallax-img" src="~/assets/img/attachment-27.jpg" alt="">
		<div class="vlt-gap-170"></div>
		<div class="container">
			<!--Large Heading-->
			<h1 class="vlt-large-heading text-center" style="color:#fff;">
				Панель <span>админ</span>истратора
			</h1>
		</div>
		<div class="vlt-gap-170"></div>
	</section>
	<!--Content-->
	<section>
		<div class="vlt-gap-60"></div>
		<div class="container">
			<div id="vlt-grid-portfolio-01">
				<!--Portfolio Item-->
                <article class="vlt-portfolio-item vlt-portfolio-item--style-1 cbp-item">
                    <div class="vlt-portfolio-item-img"><div class="vlt-fit-image" style="--size-md: 90%; --size-sm: 90%;"><img src="~/assets/img/menu/staff.png" alt="Пользователи"></div>
							
                    </div><a class="vlt-portfolio-item-overlay vlt-portfolio-item-overlay--align-center" asp-controller="User" asp-action="Index" style="background-color:rgba(255,255,255,.8);">
                        <div class="vlt-portfolio-item-meta">
                            <h4 class="vlt-portfolio-item-meta-title" style="color:#0b0b0b;">
                                Персонал
                            </h4>
                        </div>
                    </a>
                </article>
                <article class="vlt-portfolio-item vlt-portfolio-item--style-1 cbp-item">
                    <div class="vlt-portfolio-item-img"><div class="vlt-fit-image" style="--size-md: 90%; --size-sm: 90%;"><img src="~/assets/img/menu/vusi.png" alt="Учебные заведения"></div>
							
                    </div><a class="vlt-portfolio-item-overlay vlt-portfolio-item-overlay--align-center" asp-controller="University" asp-action="Index" style="background-color:rgba(255,255,255,.8);">
                        <div class="vlt-portfolio-item-meta">
                            <h4 class="vlt-portfolio-item-meta-title" style="color:#0b0b0b;">
                                Учебные заведения
                            </h4>
                        </div>
                    </a>
                </article>
                <article class="vlt-portfolio-item vlt-portfolio-item--style-1 cbp-item">
                    <div class="vlt-portfolio-item-img"><div class="vlt-fit-image" style="--size-md: 90%; --size-sm: 90%;"><img src="~/assets/img/menu/spec.png" alt="Специальности"></div>
							
                    </div><a class="vlt-portfolio-item-overlay vlt-portfolio-item-overlay--align-center" asp-controller="Specialization" asp-action="Index" style="background-color:rgba(255,255,255,.8);">
                        <div class="vlt-portfolio-item-meta">
                            <h4 class="vlt-portfolio-item-meta-title" style="color:#0b0b0b;">
                                Специальности
                            </h4>
                        </div>
                    </a>
                </article>
                <article class="vlt-portfolio-item vlt-portfolio-item--style-1 cbp-item">
                    <div class="vlt-portfolio-item-img">
                        <div class="vlt-fit-image" style="--size-md: 90%; --size-sm: 90%;"><img src="~/assets/img/menu/prog.png" alt="Программы обучения"></div>

                    </div><a class="vlt-portfolio-item-overlay vlt-portfolio-item-overlay--align-center" asp-controller="Program" asp-action="Index" style="background-color:rgba(255,255,255,.8);">
                        <div class="vlt-portfolio-item-meta">
                            <h4 class="vlt-portfolio-item-meta-title" style="color:#0b0b0b;">
                                Программы обучения
                            </h4>
                        </div>
                    </a>
                </article>
				
			</div>
			<div class="vlt-gap-70"></div>

		</div>
		<div class="vlt-gap-120"></div>
	</section>
</main>

