@using Data.Dto
@model ProgramModel
<main class="vlt-main">
	<!--Page Title-->
	<section class="jarallax">
		<img class="jarallax-img" src="~/assets/img/attachment-27.jpg" alt="">
		<div class="vlt-gap-170"></div>
		<div class="container">
			<!--Large Heading-->
			<h1 class="vlt-large-heading text-center" style="color:#fff;">
				Программы об<span>уче</span>ния
			</h1>
		</div>
		<div class="vlt-gap-170"></div>
	</section>
	<!--Content-->
	<section>
		<div class="vlt-gap-60"></div>
		<div class="container">
            <div class="vlt-cubeportfolio-filters vlt-display-1" id="vlt-filter-portfolio-01">
                <div class="cbp-filter-item cbp-filter-item-active" data-filter="*">All</div>
                @foreach (var item in Model.Specializations)
                {
                    <div class="cbp-filter-item" data-filter=".filter-@item.Id">@item.Name</div>
                }
            </div>
			<div id="vlt-grid-portfolio-01">
                <!--Portfolio Item-->
				@foreach (var item in Model.EducationPrograms)
				{
					<article class="vlt-portfolio-item vlt-portfolio-item--style-1 filter-@item.EducationalOrganizationSpecializationId cbp-item">
                        <div class="vlt-portfolio-item-img">
							@if (item.Image is null || item.Image == "")
							{
								<div class="vlt-fit-image" style="--size-md: 90%; --size-sm: 90%;"><img src="~/assets/img/spec/what.png" alt="@item.Name"></div>
							}
							else
							{
								<div class="vlt-fit-image" style="--size-md: 90%; --size-sm: 90%;"><img src="~/assets/img/spec/@item.Image" alt="@item.Name"></div>
							}
                        </div><a class="vlt-portfolio-item-overlay vlt-portfolio-item-overlay--align-center" asp-controller="Home" asp-action="UniSearch" asp-route-Filters.ProgramIds="@(item.EducationalOrganizationSpecializationId)" style="background-color:rgba(255,255,255,.8);">
                            <div class="vlt-portfolio-item-meta">
                                <h4 class="vlt-portfolio-item-meta-title" style="color:#0b0b0b;">
                                    @item.Name
                                </h4><span class="vlt-portfolio-item-meta-category vlt-display-1" style="color:#5c5c5c;">@item.Description</span>
                            </div>
                        </a>
                    </article>
				}
			</div>
			<div class="vlt-gap-70"></div>
			
		</div>
		<div class="vlt-gap-120"></div>
	</section>
</main>