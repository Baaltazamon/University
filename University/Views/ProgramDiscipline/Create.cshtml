@model ProgramDisciplineViewModel
@{
    ViewData["Title"] = "Create";
}

<main class="vlt-main">

    <section>
        <div class="container">
            <h3 class="text-center" style="color:#000;">
                Добавление пред<span>ме</span>та для поступления
            </h3>
            <hr />
            <div>
                <a class="text-info" asp-controller="Home" asp-action="Menu">Меню</a>/
                <a class="text-primary" asp-action="Index" asp-controller="Program">Программы обучения</a> /
                <a class="text-info" asp-action="Index" asp-controller="ProgramDiscipline" asp-route-id="@Model.DisciplineEducationProgram.EducationProgramId">Предметы для поступления</a>
                <a href="#">Добавление нового предмета</a>
            </div>
            <hr />
            <form asp-controller="ProgramDiscipline" asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="DisciplineEducationProgram.EducationProgramId" type="hidden" />
                
                <div class="form-group">
                    <label asp-for="DisciplineEducationProgram.DisciplineId">Дисциплина</label>
                    <select class="tp-layer-selectable" asp-for="DisciplineEducationProgram.DisciplineId">
                        <option value="@null">Выбрать дисциплину</option>
                        @foreach (var city in Model.Disciplines!)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DisciplineEducationProgram.DisciplineId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Создать</button>
                <button class="btn btn-dark" asp-controller="ProgramDiscipline" asp-action="Index" asp-route-id="@Model.DisciplineEducationProgram.EducationProgramId" class="btn btn-primary">Назад</button>
            </form>
        </div>
    </section>
</main>