@model ContactViewModel
@{
    ViewData["Title"] = "Create";
}

<main class="vlt-main">

    <section>
        <div class="container">
            <h3 class="text-center" style="color:#000;">
                Добавление кон<span>так</span>та
            </h3>
            <hr />
            <div>
                <a class="text-info" asp-controller="Home" asp-action="Menu">Меню</a>/
                <a class="text-primary" asp-action="Index" asp-controller="University">Образовательные организации</a>/
                <a class="text-info" asp-action="Index" asp-controller="Contact" asp-route-id="@Model.Contact.EducationalOrganizationId">Контакты</a>/
                <a href="#">Добавление нового контакта</a>
            </div>
            <hr />
            <form asp-controller="Contact" asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Contact.EducationalOrganizationId" type="hidden" />

                <div class="form-group">
                    <label asp-for="Contact.Value">Контактная информация</label>
                    <input asp-for="Contact.Value" class="form-control" />
                    <span asp-validation-for="Contact.Value" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Contact.TypeContactId">Тип контакта</label>
                    <select class="tp-layer-selectable" asp-for="Contact.TypeContactId">
                        <option value="@null">Выбрать тип контакта</option>
                        @foreach (var city in Model.ContactTypes!)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Contact.TypeContactId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Создать</button>
                <button class="btn btn-dark" asp-controller="Contact" asp-action="Index" asp-route-id="@Model.Contact.EducationalOrganizationId" class="btn btn-primary">Назад</button>
            </form>
        </div>
    </section>
</main>

