@model List<Data.Context.Specialization>
@{
    ViewData["Title"] = "Index";
}

<main class="vlt-main">

    <section>
        <div class="container">
            <h3 class="text-center" style="color:#000;">
                Список специ<span>аль</span>ностей
            </h3>
            <hr />
            <div>
                <a class="text-info" asp-controller="Home" asp-action="Menu">Меню</a>/
                <a class="text-primary" asp-action="Index" asp-controller="Specialization">Специальности</a>
            </div>
            <hr />
            <a class="btn btn-success" asp-controller="Specialization" asp-action="Create">Добавить</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Описание</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var specialization in Model)
                    {
                        <tr>
                            <td>@specialization.Name</td>
                            <td>@specialization.Description</td>
                            <td>
                                <a asp-controller="Specialization" asp-action="Edit" asp-route-id="@specialization.Id"><i class="fa fa-edit"></i></a><br/>
                                <a asp-controller="Specialization" asp-action="Delete" asp-route-id="@specialization.Id"><i class="fa fa-remove"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>

